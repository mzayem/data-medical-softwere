@page
@model data_medical_softwere.Pages.Groups.IndexModel
@{
    ViewData["Title"] = "Groups List";
}

<h2>Groups</h2>

<a class="btn btn-primary mb-3" asp-page="/Groups/Create">Create New Group</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model.Groups)
        {
            <tr>
                <td>@group.Id</td>
                <td>@group.Name</td>
            </tr>
        }
    </tbody>
</table>
